    <!-- Employee Profile Information -->
    <div class="profile-container">
        <h2>Welcome, <%= employee.FirstName %> <%= employee.LastName %></h2>

        <!-- Profile Cards -->
           <div class="profile-card">
            <h4>Employee ID:</h4>
            <p><%= employee.EmployeeID %></p> <!-- Added EmployeeID -->
        </div>
        <div class="profile-card">
            <h4>First Name:</h4>
            <p><%= employee.FirstName %></p>
        </div>

        <div class="profile-card">
            <h4>Last Name:</h4>
            <p><%= employee.LastName %></p>
        </div>

        <div class="profile-card">
            <h4>Phone Number:</h4>
            <p><%= employee.PhoneNumber %></p>
        </div>

        <div class="profile-card">
            <h4>Job Title:</h4>
            <p><%= employee.JobTitle %></p>
        </div>

        <div class="profile-card">
            <h4>Department:</h4>
            <p><%= employee.DepartmentName %></p>
        </div>

        <div class="profile-card">
            <h4>Email:</h4>
            <p><%= employee.Email %></p>
        </div>

        <div class="profile-card">
            <h4>Address:</h4>
            <p><%= employee.Address %></p>
        </div>

        <div class="profile-card">
            <h4>Last Updated:</h4>
            <p><%= employee.UpdatedAt %></p>
