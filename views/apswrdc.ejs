<!-- Password Change Form -->
<div class="form-container">
    <h2>Change Your Password</h2>
    <form action="/apswrdc" method="POST">
        <div>
            <label for="oldPassword">Old Password:</label>
            <input type="password" id="oldPassword" name="oldPassword" required>
        </div>
        
        <div>
            <label for="newPassword">New Password:</label>
            <input type="password" id="newPassword" name="newPassword" oninput="validatePassword()" required> 
            
            <!-- Validation Feedback -->
            <div id="lengthFeedback" class="password-feedback"></div>
            <div id="lowercaseFeedback" class="password-feedback"></div>
            <div id="uppercaseFeedback" class="password-feedback"></div>
            <div id="digitFeedback" class="password-feedback"></div>
            <div id="specialCharFeedback" class="password-feedback"></div>
        </div>

        <div>
            <button type="submit" id="submitButton" disabled>Update Password</button>
        </div>
    </form>
</div>

