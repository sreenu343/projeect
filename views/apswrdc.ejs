<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <link rel="stylesheet" href="/styles/first.css"> <!-- Corrected path to CSS -->
    <title>Change Password</title>
    <style>
        body {
           
            margin: 0;
            padding: 0;
            background-color: #f4f7fc;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

       
        /* Form Container */
        .form-container {
            width: 40%; /* Reduced container width */
            margin: 40px auto;
            padding: 30px;
            border-radius: 10px;
            background-color: white;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .form-container:hover {
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

        h2 {
            text-align: center;
            font-size: 28px;
            color: #333;
            margin-bottom: 30px;
            font-weight: bold;
        }

        form div {
            margin-bottom: 20px;
        }

        label {
            font-size: 16px;
            display: block;
            margin-bottom: 8px;
            color: #333;
        }

        input[type="password"] {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border: 2px solid #ddd;
            border-radius: 8px;
            outline: none;
            transition: all 0.3s ease;
        }

        input[type="password"]:focus {
            border-color: #0056b3;
            box-shadow: 0 0 8px rgba(0, 86, 179, 0.2);
        }

        .password-feedback {
            font-size: 14px;
            margin-top: 5px;
        }

        .valid {
            color: green;
        }

        .invalid {
            color: red;
        }

        button[type="submit"] {
            width: 100%;
            padding: 12px;
            font-size: 18px;
            background-color: #0056b3;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        button[type="submit"]:hover {
            background-color: #003366;
            transform: translateY(-2px);
        }

        button[type="submit"]:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        p {
            text-align: center;
            font-size: 16px;
            color: white;
            margin-top: 5px;
        }

       </style>
    <script>
        function validatePassword() {
            const newPassword = document.getElementById("newPassword").value;
            const submitButton = document.getElementById("submitButton");
            const lengthFeedback = document.getElementById("lengthFeedback");
            const lowercaseFeedback = document.getElementById("lowercaseFeedback");
            const uppercaseFeedback = document.getElementById("uppercaseFeedback");
            const digitFeedback = document.getElementById("digitFeedback");
            const specialCharFeedback = document.getElementById("specialCharFeedback");

            // Regular expressions for each validation check
            const lengthRegex = /.{8,}/; // At least 8 characters
            const lowercaseRegex = /[a-z]/; // At least one lowercase letter
            const uppercaseRegex = /[A-Z]/; // At least one uppercase letter
            const digitRegex = /\d/; // At least one digit
            const specialCharRegex = /[!@#$%^&*(),.?":{}|<>]/; // At least one special character

            // Check each validation rule
            const isLengthValid = lengthRegex.test(newPassword);
            const isLowercaseValid = lowercaseRegex.test(newPassword);
            const isUppercaseValid = uppercaseRegex.test(newPassword);
            const isDigitValid = digitRegex.test(newPassword);
            const isSpecialCharValid = specialCharRegex.test(newPassword);

            // Update feedback and apply styles
            lengthFeedback.textContent = isLengthValid ? "✓ At least 8 characters" : "✗ At least 8 characters";
            lengthFeedback.className = isLengthValid ? "valid" : "invalid";

            lowercaseFeedback.textContent = isLowercaseValid ? "✓ Contains lowercase letter" : "✗ Contains lowercase letter";
            lowercaseFeedback.className = isLowercaseValid ? "valid" : "invalid";

            uppercaseFeedback.textContent = isUppercaseValid ? "✓ Contains uppercase letter" : "✗ Contains uppercase letter";
            uppercaseFeedback.className = isUppercaseValid ? "valid" : "invalid";

            digitFeedback.textContent = isDigitValid ? "✓ Contains a digit" : "✗ Contains a digit";
            digitFeedback.className = isDigitValid ? "valid" : "invalid";

            specialCharFeedback.textContent = isSpecialCharValid ? "✓ Contains a special character" : "✗ Contains a special character";
            specialCharFeedback.className = isSpecialCharValid ? "valid" : "invalid";

            // Enable submit button only if all validations are true
            if (isLengthValid && isLowercaseValid && isUppercaseValid && isDigitValid && isSpecialCharValid) {
                submitButton.disabled = false;
            } else {
                submitButton.disabled = true;
            }
        }
    </script>
</head>
<body>
